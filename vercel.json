{
  "version": 2,
  "buildCommand": "npm install --legacy-peer-deps && npm run build",
  "framework": "nextjs",
  "outputDirectory": ".next",
  "env": {
    "NEXT_PUBLIC_API_URL": "https://sentinal-ai-backend.vercel.app"
  },
  "headers": [
    {
      "source": "/fonts/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "routes": [
    { "src": "/about", "dest": "/about" },
    { "src": "/blog", "dest": "/blog" },
    { "src": "/contact", "dest": "/contact" },
    { "src": "/resources", "dest": "/resources" },
    { "src": "/solutions", "dest": "/solutions" },
    { "src": "/(.*)", "dest": "/" }
  ]
}
